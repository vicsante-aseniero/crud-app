{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080"
        },
        {
            "name": "Http API Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}api/cmd/app/main.go"
        },
        {
            "name": "gRPC API Server - Company Domain",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}api/cmd/company/main.go"
        },
        {
            "name": "App HTTP Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}api/cmd/app/http/server.go"
        },
        {
            "name": "App gRPC Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}api/cmd/app/rpc/server.go"
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/ui",
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/ui",
            "port": 9222,
            "trace": true
        },
        {
            "name": "Next.js: debug client-side (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/ui",
            "reAttach": true,
            "pathMappings": [{
                "url": "webpack://_N_E",
                "path": "${workspaceFolder}/ui"
            }]
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/ui/node_modules/next/dist/bin/next",
            "runtimeArgs": ["--inspect"],
            "skipFiles": ["<node_internals>/**"],
            "serverReadyAction": {
                "action": "debugWithEdge",
                "killOnServerStop": true,
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "webRoot": "${workspaceFolder}/ui"
            }
        }
    ]
}